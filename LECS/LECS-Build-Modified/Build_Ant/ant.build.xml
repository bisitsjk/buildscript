	<target name="_MERGE.STORE.IMAGE">
		<!-- ${param.project.name} -->
		<echo>+=======================================================+</echo>
		<echo>                   _MERGE.STORE.IMAGE                                      </echo>
		<echo>+=======================================================+</echo>

		<!-- Image -->
		<delete dir="${merge.dir}/${param.project.name}/Image" />
		<mkdir dir="${merge.dir}/${param.project.name}/Image" />
		<copy todir="${merge.dir}/${param.project.name}/Image">
