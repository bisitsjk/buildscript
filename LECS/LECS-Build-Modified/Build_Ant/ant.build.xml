		<echo>                  MERGE.LPS.APP                                     </echo>
		<echo>+=======================================================+</echo>

		<!-- Clean -->
		<delete dir="${merge.dir}/LECS-Platform-LPS/App" />
		<mkdir dir="${merge.dir}/LECS-Platform-LPS/App" />
		<!-- JSP -->
		<copy todir="${merge.dir}/LECS-Platform-LPS/App">
