			<param name="param.project.name" value="${param.project.name}"/>
		</antcall>
		<antcall target="_MERGE.STORE.APP">
			<param name="param.project.name" value="${param.project.name}"/>
<!--			<param name="param.store.config.file.name" value="${param.store.config.file.name}"/> -->
		</antcall>
		<antcall target="_MERGE.STORE.CONTENTS">
			<param name="param.project.name" value="${param.project.name}"/>
