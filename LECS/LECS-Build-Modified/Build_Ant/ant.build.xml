		</move>
		<!-- 불필요한 파일 정리 -->
		<delete>
			<fileset dir="${merge.dir}/${param.project.name}/App">
				<patternset refid="pattern.unnecessary.resource"/>
			</fileset>
		</delete>
	</target>

	<target name="_MERGE.STORE.CONTENTS">
		<!-- ${param.project.name} -->
		<echo>+=======================================================+</echo>
		<echo>                   _MERGE.STORE.CONTENTS                                      </echo>
		<echo>+=======================================================+</echo>

		<!-- Contents -->
