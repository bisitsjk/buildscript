			<param name="param.project.name" value="LECS-Store-Nike"/>
		</antcall>
		<antcall target="_MERGE.STORE.APP">
			<param name="param.project.name" value="LECS-Store-Nike"/>
		</antcall>
		<antcall target="_MERGE.STORE.CONTENTS">
			<param name="param.project.name" value="LECS-Store-Nike"/>
		</antcall>
		<antcall target="_MERGE.STORE.IMAGE">
			<param name="param.project.name" value="LECS-Store-Nike"/>
