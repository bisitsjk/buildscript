		<javac source="1.7"
			target="1.7"
			srcdir="E:/jenkins-lottesuper/jobs/TOMCAT_LOTTESUPER_WINWIN_1_TEST_BUILD/workspace/lottesuper2011/branches/TEST/aws-lotte-super-winwin/src_dynamic"
			classpathref="classpath"
			destdir="E:/jenkins-lottesuper/jobs/TOMCAT_LOTTESUPER_WINWIN_1_TEST_BUILD/workspace/lottesuper2011/branches/TEST/aws-lotte-super-winwin/WebContent/WEB-INF/dynamic_classes"
			failonerror="on" 
			debug="on"
			encoding="utf-8"
			compiler="modern"
			fork="true"
			memoryMaximumSize="256m"
			includeantruntime="false"/> 
			
		<copy todir="E:/jenkins-lottesuper/jobs/TOMCAT_LOTTESUPER_WINWIN_1_TEST_BUILD/workspace/lottesuper2011/branches/TEST/aws-lotte-super-winwin/WebContent/WEB-INF/dynamic_classes">
